@model dotnetapp.Models.Product

<h2>Delete Confirmation</h2>

<p>Are you sure you want to delete this product?</p>

<dl class="row">
    <dt class="col-sm-2">Product Name:</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Category:</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Price:</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Quantity:</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Manufacturer:</dt>
    <dd class="col-sm-10">@Model.Manufacturer</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
