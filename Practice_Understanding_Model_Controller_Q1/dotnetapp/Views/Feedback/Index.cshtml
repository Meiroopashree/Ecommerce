@model List<dotnetapp.Models.Feedback>

<h2>Feedback List</h2>
<a asp-action="Create" class="btn btn-sm btn-success">Create New Feedback</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Student Name</th>
            <th>Course</th>
            <th>Feedback</th>
            <th>Rating</th>
            <th>Date Submitted</th>
            <th>Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.Id</td>
                <td>@feedback.StudentName</td>
                <td>@feedback.Course</td>
                <td>@feedback.Feedbacks</td>
                <td>@feedback.Rating</td>
                <td>@feedback.DateSubmitted.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@feedback.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@feedback.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
