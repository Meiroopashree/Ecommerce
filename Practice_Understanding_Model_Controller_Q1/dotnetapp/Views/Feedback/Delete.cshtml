    @model dotnetapp.Models.Feedback

    <h2>Delete Confirmation</h2>

    <p>Are you sure you want to delete this feedback?</p>

    <dl class="row">
        <dt class="col-sm-2">Student Name:</dt>
        <dd class="col-sm-10">@Model.StudentName</dd>

        <dt class="col-sm-2">Course:</dt>
        <dd class="col-sm-10">@Model.Course</dd>

        <dt class="col-sm-2">Feedback:</dt>
        <dd class="col-sm-10">@Model.Feedbacks</dd>

        <dt class="col-sm-2">Rating:</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Date Submitted:</dt>
        <dd class="col-sm-10">@Model.DateSubmitted.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
