@model dotnetapp.Models.Course

<h2>Add New Course</h2>

<form asp-action="AddCourse" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructor"></label>
        <input asp-for="Instructor" class="form-control" />
        <span asp-validation-for="Instructor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Credits"></label>
        <input asp-for="Credits" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Course</button>
</form>
