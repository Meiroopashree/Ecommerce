@model IEnumerable<dotnetapp.Models.Course>

<h2>Search Courses</h2>

<form asp-action="SearchCoursesByName" method="post">
    <div class="form-group">
        <input type="text" name="query" class="form-control" placeholder="Enter course name" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Instructor</th>
                <th>Credits</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td>@course.Instructor</td>
                    <td>@course.Credits</td>
                    <td>
                        <a asp-action="DisplayStudentsForCourse" asp-route-courseId="@course.Id" class="btn btn-info">View Students</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
