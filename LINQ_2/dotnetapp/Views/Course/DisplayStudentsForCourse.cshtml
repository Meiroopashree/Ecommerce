@model IEnumerable<dotnetapp.Models.Student>

<h2>Students for Course</h2>

@if (!Model.Any())
{
    <p>No students enrolled in this course.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Student Number</th>
                <th>Name</th>
                <th>Enrollment Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.StudentNumber</td>
                    <td>@student.Name</td>
                    <td>@student.EnrollmentDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
