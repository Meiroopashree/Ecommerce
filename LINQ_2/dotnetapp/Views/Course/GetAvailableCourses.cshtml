@model IEnumerable<dotnetapp.Models.Course>

<h2>Available Courses</h2>

@if (!Model.Any())
{
    <p>No available courses.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Instructor</th>
                <th>Credits</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td>@course.Instructor</td>
                    <td>@course.Credits</td>
                </tr>
            }
        </tbody>
    </table>
}
