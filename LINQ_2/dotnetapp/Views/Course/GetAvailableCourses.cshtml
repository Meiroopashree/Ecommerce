@model List<dotnetapp.Models.Course>

<h2>Available Courses</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Duration (hours)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Duration</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available courses found.</p>
}
