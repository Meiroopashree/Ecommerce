@model List<dotnetapp.Models.Course>

<p>
    <a asp-action="AddCourse" class="btn btn-primary">Add Course</a>
</p>

<form asp-controller="Course" asp-action="SearchCoursesByName" method="post">
    <div class="form-group">
        <label for="searchQuery">Search by Name:</label>
        <div class="button-container">
            <input type="text" id="searchQuery" name="query" class="form-control textfield" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<h2>All Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Instructor</th>
            <th>Credits</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Instructor</td>
                <td>@course.Credits</td>
            </tr>
        }
    </tbody>
</table>

<div class="button-containers">
    <form asp-controller="Course" asp-action="GetAvailableCourses" method="get">
        <button type="submit" class="btn btn-primary">Available Courses</button>
    </form>
    <form asp-controller="Course" asp-action="GetCoursesWithStudents" method="get">
        <button type="submit" class="btn btn-primary">Courses with Students</button>
    </form>
</div>

<h2>Students Enrolled in Each Course</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Instructor</th>
            <th>Credits</th>
            <th>Student Number</th>
            <th>Name</th>
            <th>Enrollment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Instructor</td>
                <td>@course.Credits</td>
                <td>
                    @foreach (var student in course.Students)
                    {
                        <span>@student.StudentNumber</span><br />
                    }
                </td>
                <td>
                    @foreach (var student in course.Students)
                    {
                        <span>@student.Name</span><br />
                    }
                </td>
                <td>
                    @foreach (var student in course.Students)
                    {
                        <span>@student.EnrollmentDate.ToString("yyyy-MM-dd")</span><br />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
