@model List<dotnetapp.Models.Student>

<h2>Add New Course</h2>

<form asp-action="AddCourse" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructor" class="control-label">Instructor</label>
        <input asp-for="Instructor" class="form-control" />
        <span asp-validation-for="Instructor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Credits" class="control-label">Credits</label>
        <input asp-for="Credits" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Course" class="btn btn-primary" />
    </div>
</form>

<h2>Students Enrolled in the Course</h2>

<table class="table">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>Name</th>
            <th>Enrollment Date</th>
            <th>Course Name</th>
            <th>Instructor</th>
            <th>Credits</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentNumber</td>
                <td>@student.Name</td>
                <td>@student.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                <td>@student.Course.Name</td> <!-- Accessing course name directly from student's course object -->
                <td>@student.Course.Instructor</td> <!-- Accessing instructor directly from student's course object -->
                <td>@student.Course.Credits</td> <!-- Accessing credits directly from student's course object -->
            </tr>
        }
    </tbody>
</table>
