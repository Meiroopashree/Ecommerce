@model List<dotnetapp.Models.Book>

<h2>Available Books</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Published Year</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.PublishedYear</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available books found.</p>
}
